extends layout


block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
          small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      .row.list-group
        each note in noteCollection

          .col-xs-12.list-group-item
            h4
              a(href="/newnote")= note.Username
              small &nbsp;
              span.badge.pull-right.badge-default= note.Password + " is my password, but don't tell"
            p.preview= 'Title= '+ note.Notes.Title.substr(0,100)
            p.contents= 'Contents= ' + note.Notes.Contents
